@model RiverTransport

@{
    ViewData["Title"] = "Редактирование";
}

<div class="container">
    <h1>Редактирование</h1>
    <form asp-controller="Transport" asp-action="Edit" method="post" class="form-horizontal">
        <div class="form-group">
            <div asp-validation-summary="All"></div>
            <input type="hidden" asp-for="RiverTransportId" />

            <label class="col-sm-2 control-label">Название речного судна</label>
            <div class="col-sm-10">
                <input type="text" asp-for="Name" class="form-control" value="@Model.Name">
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Тип судна</label>
            <div class="col-sm-10">
                <select asp-for="TransportType" asp-items="Html.GetEnumSelectList<RiverTransportType>()" class="form-control">
                    <option value="@Model.TransportType">Выберите тип судна</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Маршрут</label>
            <div class="col-sm-10">
                <input type="text" asp-for="Route" class="form-control" value="@Model.Route">
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Вместимость</label>
            <div class="col-sm-10">
                <input type="text" asp-for="Capacity" class="form-control" value="@Model.Capacity">
            </div>
        </div>


        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Сохранить</button>
            </div>
        </div>
    </form>
</div>