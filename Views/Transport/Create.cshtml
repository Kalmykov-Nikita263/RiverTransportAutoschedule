@model RiverTransport
@{
    ViewData["Title"] = "Создание";
}

<div class="container">
    <h1>Создание</h1>
    <form asp-controller="Transport" asp-action="Create" method="post" class="form-horizontal">
        <div class="form-group">
            <div asp-validation-summary="All"></div>

            <label class="col-sm-2 control-label">Название речного судна</label>
            <div class="col-sm-10">
                <input type="text" asp-for="Name" class="form-control" placeholder="Название речного судна">
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Тип судна</label>
            <div class="col-sm-10">
                <select asp-for="TransportType" asp-items="Html.GetEnumSelectList<RiverTransportType>()" class="form-control">
                    <option value="">Выберите тип судна</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Маршрут</label>
            <div class="col-sm-10">
                <input type="text" asp-for="Route" class="form-control" placeholder="Маршрут">
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Вместимость</label>
            <div class="col-sm-10">
                <input type="text" asp-for="Capacity" class="form-control" placeholder="Вместимость">
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Сохранить</button>
            </div>
        </div>
    </form>
</div>