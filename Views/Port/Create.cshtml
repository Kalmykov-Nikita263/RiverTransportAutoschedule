@model RiverPort

@{
    ViewData["Title"] = "Создание";
}

<div class="container">
    <h1>Создание</h1>
    <form asp-controller="Port" asp-action="Create" method="post" class="form-horizontal">
        <div class="form-group">
            <div asp-validation-summary="All"></div>

            <label class="col-sm-2 control-label">Название речного порта</label>
            <div class="col-sm-10">
                <input type="text" asp-for="Name" class="form-control" placeholder="Название речного порта">
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Местоположение</label>
            <div class="col-sm-10">
                <input type="text" asp-for="Location" class="form-control" placeholder="Местоположение">
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Сохранить</button>
            </div>
        </div>
    </form>
</div>