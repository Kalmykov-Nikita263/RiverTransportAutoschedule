@model RiverPort

@{
    ViewData["Title"] = "Редактирование";
}

<div class="container">
    <h1>Редактирование</h1>
    <form asp-controller="Port" asp-action="Edit" method="post" class="form-horizontal">
        <div class="form-group">
            <div asp-validation-summary="All"></div>
            <input type="hidden" asp-for="RiverPortId" />

            <label class="col-sm-2 control-label">Название речного порта</label>
            <div class="col-sm-10">
                <input type="text" asp-for="Name" class="form-control" value="@Model.Name">
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Местоположение</label>
            <div class="col-sm-10">
                <input type="text" asp-for="Location" class="form-control" value="@Model.Location">
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Сохранить</button>
            </div>
        </div>
    </form>
</div>